{
    "editor.rulers": [120],
    "deno.enable": true,
    "deno.config": "./deno.jsonc",
    "deno.importMap": "./import_mappings.json",
    "deno.testing.enable": true,
    "deno.lint": true,
    "deno.unstable": true,
    "deno.codeLens.references": true,

    "terminal.integrated.tabs.title": "${process}",
    "cSpell.words": [
        "buildfx",
        "choco",
        "Deno",
        "kubectl",
        "pwsh",
        "qunit",
        "skippable",
        "SOURCESDIRECTORY",
        "templating",
        "usql",
        "winget"
    ],
    "deno.codeLens.testArgs": [
        "--allow-all",
        "--no-check",
        "--unstable"
    ]
}
